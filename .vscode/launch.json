    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug host",
            "cargo": {
                "args": [
                    "build",
                    "--bin=host",
                    "--package=host"
                ],
                "filter": {
                    "name": "host",
                    "kind": "bin"
                }
            },
            "args": [
                "--wasm",
                "./target/wasm32-wasi/release/guest.wasm"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}